{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "CommonJS",
    "lib": ["ESNext","DOM"],
    "sourceMap": true,
  },
  "include": ["./index.ts", "external.js"],
  "exclude": ["./node_modules"]
}